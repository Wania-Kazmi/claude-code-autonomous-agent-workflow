{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(uv:*)",
      "Bash(git:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(chmod:*)",
      "Bash(jq:*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Skill"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(dd if=/dev/zero)",
      "Read(.env)",
      "Read(**/secrets/**)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/skill-activator.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date -Iseconds)] Tool: $CLAUDE_TOOL_NAME | File: $CLAUDE_FILE_PATH\" >> .claude/logs/tool-usage.log 2>/dev/null || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date -Iseconds)] File modified: $CLAUDE_FILE_PATH\" >> .claude/logs/file-changes.log 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date -Iseconds)] Skill invoked: $CLAUDE_SKILL_NAME\" >> .claude/logs/skill-invocations.log 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/skill-enforcement-stop.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": ".claude/hooks/claudeception-activator.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "env": {
    "AUTONOMOUS_MODE": "true",
    "MAX_SELF_HEAL_RETRIES": "3",
    "SKILL_ENFORCEMENT": "strict"
  }
}
